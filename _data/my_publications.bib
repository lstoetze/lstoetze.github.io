@article{Gschwend2016,
abstract = {Rental voting is a coalition voting strategy, by which supporters of a senior coalition partner cast their vote for the prospective junior coalition partner to secure its representation in parliament and, hence, the formation of this coalition. We make transparent that previous research has only studied rental- voting in contexts, in which coalition signals were consistent with the rental-vote logic. Employing a qualitative identification strategy, we find evidence for rental voting only in the context with consistent coalition signals. Moreover, respondents exposed to consistent coalition signals behave similarly to voters who most likely did not receive the inconsistent coalition signals they had been exposed to.},
author = {Gschwend, Thomas and Stoetzer, Lukas and Zittlau, Steffen},
doi = {10.1016/j.electstud.2016.06.011},
file = {:home/lstoetze/Documents/Literatur/Gschwend, Stoetzer, Zittlau - 2016 - What drives rental votes How coalitions signals facilitate strategic coalition voting.pdf:pdf},
issn = {02613794},
journal = {Electoral Studies},
keywords = {Coalition Signals,Coalitions,Rental votes,Strategic voting},
pages = {293--306},
publisher = {Elsevier Ltd},
title = {{What drives rental votes? How coalitions signals facilitate strategic coalition voting}},
url = {http://dx.doi.org/10.1016/j.electstud.2016.06.011},
volume = {44},
year = {2016}
}
@article{Stoetzer2015,
abstract = {In most multidimensional spatial models, the systematic component of agent utility functions is specified as additive separable. We argue that this assumption is too restrictive, at least in the context of spatial voting in mass elections. Here, assuming separability would stipulate that voters do not care about how policy platforms combine positions on multiple policy dimensions. We present a statistical implementation of Davis, Hinich, and Ordeshook's (1970) Weighted Euclidean Distance model that allows for the estimation of the direction and magnitude of non-separability from vote choice data. We demonstrate in a Monte-Carlo experiment that conventional separable model specifications yield biased and/or unreliable estimates of the effect of policy distances on vote choice probabilities in the presence of non-separable preferences. In three empirical applications, we find voter preferences on economic and socio-cultural issues to be non-separable. If non-separability is unaccounted for, researchers run the risk of missing crucial parts of the story. The implications of our findings carry over to other fields of research: checking for non-separability is an essential part of robustness testing in empirical applications of multidimensional spatial models.},
author = {Stoetzer, Lukas F. and Zittlau, Steffen},
doi = {10.1093/pan/mpv013},
file = {:home/lstoetze/Documents/Literatur/Stoetzer, Zittlau - 2015 - Multidimensional Spatial Voting with Non-separable Preferences.pdf:pdf},
issn = {14764989},
journal = {Political Analysis},
keywords = {Spatial Voting},
mendeley-tags = {Spatial Voting},
number = {3},
pages = {415--428},
title = {{Multidimensional Spatial Voting with Non-separable Preferences}},
url = {https://academic.oup.com/pan/article-abstract/23/3/415/2593580/Multidimensional-Spatial-Voting-with-Non-separable?redirectedFrom=fulltext},
volume = {23},
year = {2015}
}
