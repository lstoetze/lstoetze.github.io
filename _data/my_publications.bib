keywords = {account-,accountability,coalition government,coalition signals,voting behavior},
month = {apr},
number = {2},
pages = {642--655},
publisher = {University of Chicago PressChicago, IL},
title = {{Weighting Parties and Coalitions: How Coalition Signals Influence Voting Behavior}},
volume = {79},
year = {2017}
}
